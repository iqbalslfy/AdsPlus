<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:background="@color/colorGreyLight1"
        android:padding="20dp"
        android:text="@string/ketentuan_check_in"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGreyLight1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="1. Foto diambil di tempat yang terang. \n2. Foto terlihat jelas dan tidak buram. \n3. Foto disesuaikan dengan template."/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lanjut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="50dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginRight="20dp"
                    android:text="@string/lanjut"/>

                <TextView
                    android:id="@+id/batal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/lanjut"
                    android:layout_marginBottom="50dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginRight="20dp"
                    android:text="@string/batal"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>